generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String @id @default(uuid())
  name            String
  email           String @unique
  role            String
  password        String
  confirmPassword String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user")
}

model Institution {
  id           String @id @default(uuid())
  name         String @unique
  phone        String
  cep          String
  adressNumber String
  street       String
  district     String
  city         String
  state        String
  complement   String

  students Student[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("institution")
}

model Student {
  id    String @id @default(uuid())
  name  String @unique
  age   String
  phone String

  institution   Institution @relation(fields: [institutionId], references: [id])
  institutionId String

  consult Consult[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("studant")
}

model Consult {
  id String @id @default(uuid())

  schedule String
  hour     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  students  Student @relation(fields: [studentId], references: [id])
  studentId String

  @@map("consult")
}
