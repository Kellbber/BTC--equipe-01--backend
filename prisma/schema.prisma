generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @default(uuid())
  nome         String
  nome_usuario String @unique
  email        String @unique
  senha        String
  cargo        String
  admin        Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user")
}

model Institution {
  id         String @id @default(uuid())
  nome       String @unique
  telefone   String
  cep        String
  logradouro String
  bairro     String
  cidade     String
  estado     String

  usuarios User[]
  // alunos   Studant[] aguardando a criação do schema Studant para efetuar a relação One to Many

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("institution")
}
