generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(uuid())
  nome  String
  email String @unique
  cargo String
  senha String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user")
}

model Institution {
  id          String @id @default(uuid())
  name        String @unique
  phone    String
  cep         String
  adressNumber  String
  street      String
  district      String
  city      String
  state      String
  complement String

  students   Studant[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("institution")
}

model Studant {
  id        String @id @default(uuid())
  nome      String @unique
  data_nasc String
  telefone  String

  instituicao   Institution @relation(fields: [instituicaoId], references: [id])
  instituicaoId String

  consultas Consult[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("studant")
}

model Consult {
  id String @id @default(uuid())

  agenda String
  hora String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  alunos Studant @relation(fields: [alunoId], references: [id])
  alunoId String

  @@map("consult")
}
